@model Prenotazione;


@{
    ViewData["Title"] = "Prenota";
}

<div class="text-center">
    <h1 class="display-4">Prenota</h1>
    <form class="m-2" method="post" asp-action="Conferma">
        <div class="form-group">
            <label asp-for="Cognome">Il tuo Cognome:</label>
            <input asp-for="Cognome" class="form-control" required placeholder="Rossi">
        </div>
        <div class="form-group">
            <label asp-for="Nome">Il tuo Nome:</label>
            <input asp-for="Nome" class="form-control" required placeholder="Mario">
        </div>
        <div class="form-group">
            <label asp-for="Email">La t
                ua Email:</label>
            <input asp-for="Email" class="form-control" required placeholder="Rossimario@gmail.com">
        </div>
        <div class="form-group">
            <label asp-for="DataDiNascita">La tua data di nascita:</label>
            <input asp-for="DataDiNascita" class="form-control" required type="date">
        </div>
        <div class="form-group">
            <label asp-for="Sesso">Sesso: </label>
            <label>Maschio</label>
            <input type="radio" name="Sesso" value="Maschio" asp-for="Sesso">
            <label>Femmina</label>
            <input type="radio" name="Sesso" value="Femmina" asp-for="Sesso">
            <label>Preferisco non rispondere</label>
            <input type="radio" name="Sesso" value="Null" asp-for="Sesso">
        </div>
<br><br>

        <select id="selectRuolo" name="Ruolo">
            <option value="Studente">Studente</option>
            <option value="Professore">Professore</option>
            <option value="Genitore">Genitore</option>
        </select>
<br><br>
        <input type="submit" id="bottoneConferma" value="Conferma"/>
    </form>
    </div>
</div>

